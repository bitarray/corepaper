<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>
      {{#if siteTitleOnly}}{{siteTitle}}{{else}}{{pageTitle}} | {{siteTitle}}{{/if}}
    </title>

    {{#if pageDescription}}
      <meta property="og:description" content="{{pageDescription}}" />
    {{/if}}
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{pageUrl}}" />
    <meta property="og:site_name" content="{{siteTitle}}" />

    <meta itemprop="name" content="{{pageTitle}}">
    {{#if pageDescription}}
      <meta itemprop="description" content="{{pageDescription}}">
    {{/if}}

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{{pageTitle}}" />
    {{#if pageDescription}}
      <meta name="twitter:description" content="{{pageDescription}}" />
    {{/if}}

    <link rel="stylesheet" href="{{siteBaseUrl}}css/site.css" />
  </head>

  <body>
    <div id="content">
      <main>
        <article>
          <header>
            {{#if toc}}
              <span id="toc" class="marginnote">
                <h3>Table of contents</h3>
                {{{toc}}}
              </span>
            {{/if}}

            <span id="breadcrumb">
              <a href="{{siteBaseUrl}}">Core Paper</a>
              {{#if localSitemap.breadcrumb}}
                {{#each localSitemap.breadcrumb}}
                  &gt; <a href="{{this.url}}">{{this.title}}</a>
                {{/each}}
              {{/if}}
            </span>
            <h1 class="page">{{pageTitle}}</h1>
            {{#if pageDescriptionContent}}
              <p class="subtitle">{{{pageDescriptionContent}}}</p>
            {{/if}}
          </header>
          <section>
            {{{pageContent}}}

            {{#if localSitemap.children}}
              <h2>On this page</h2>
              <ul>
                {{#each localSitemap.children}}
                  <li><a href="{{this.url}}">{{this.title}}</a>: {{this.description}}</li>
                {{/each}}
              </ul>
            {{/if}}
          </section>

          <footer>
            <p class="de-emphasize copyright">
              <a href="https://bitarray.dev">Legal notice</a>.

              Copyright {{pageCopyrightYears}}
              <a href="https://bitarray.dev">Bitarray GmbH</a>.

              {{#if pageLicense}}
                <br />
                This page is licensed under the terms of
                <a href="{{siteBaseUrl}}license/{{pageLicense}}.txt">{{pageLicense}}</a>.
              {{/if}}

              {{#if pageLicenseCode}}
                <br />
                In addition, code blocks in this page are licensed under the terms of
                <a href="{{siteBaseUrl}}license/{{pageLicenseCode}}.txt">{{pageLicenseCode}}</a>.
              {{/if}}
            </p>
          </footer>
        </article>
      </main>

      {{#if sitemap}}
      <aside id="asidebar">
        <nav class="main-menu">
          <h3><a href="{{siteBaseUrl}}">Core Paper</a></h3>
          {{#each sitemap}}
            {{> document/sitemap }}
          {{/each}}
        </nav>
      </aside>
      {{/if}}
    </div>

    <script async src="{{siteBaseUrl}}js/vendor/highlight.js"></script>
    <script async src="{{siteBaseUrl}}js/vendor/mathjax.js"></script>
  </body>
</html>
